
<div class= "list">
    <strong>Name</strong>
    <strong>Player</strong>
    <strong>Album Cover</strong>
    <strong>Action</strong>
</div>

<% @songs.each do |song| %>
    <div class= "song-card">
        <p><%= song.name %></p>
        <audio controls>
            <source src="<%= song.link %>" type="audio/mpeg">
            Your browser does not support the audio element.
        </audio>
        <img src="<%=song.cover %>" alt="">
        <%= link_to 'View Album' %>
    </div>
    <br>
<% end %>
